<div class="btn-group ops">
    <button type="button" class="btn btn-default recommend-glossary">
        <i class="fa fa-comment"></i>
        创建术语
    </button>
    <!--
    <button type="button" class="btn btn-default collect-glossary">
        <i class="fa fa-star"></i>
        收藏为术语
    </button>
    -->
    <button type="button" class="btn btn-default copy-source">
        <i class="fa fa-copy"></i>
        复制
    </button>
</div>
<div class="panel recommend-form">
    <div class="panel-body recommend-source">
        <%=source %>
    </div>
    <div class="panel-body">
        <textarea name="" id="" cols="30" rows="5" class="recommend-target form-control" placeholder="术语翻译结果"></textarea>
    </div>
    <div class="panel-footer">
        <button class="btn btn-success submit">提交</button>
        <a href="javascript:void(0);" class='close-editor'>取消</a>
    </div>
</div>
<div class="panel collect-form">
    <div class="panel-body">
        <p><strong>选择一个术语表</strong></p>
        <select name="" id="glossary_tables" class="form-control">
        </select>
    </div>
    <div class="panel-body recommend-source">
        <%=source %>
    </div>
    <div class="panel-body">
        <textarea name="" id="" cols="30" rows="5" class="collect-target form-control" placeholder="术语翻译结果"></textarea>
    </div>
    <div class="panel-footer">
        <button class="btn btn-success submit">提交</button>
        <a href="javascript:void(0);" class='close-editor'>取消</a>
    </div>
</div>