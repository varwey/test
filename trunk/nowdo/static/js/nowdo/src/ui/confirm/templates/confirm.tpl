<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close confirm-cancel">&times;</button>
            <h4 class="modal-title"><%=title %></h4>
        </div>
        <div class="modal-body">
            <%=content %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-success confirm-ok">确认</button>
            <button type="button" class="btn btn-info confirm-cancel">取消</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->