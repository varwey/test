{% extends "account/base/account_layout.html" %}

{% block title %}
<title>{{ _("欢迎加入脑洞") }}</title>
{% endblock %}

{% block css %}
{% endblock %}

{% block content %}
    <div class="login-form-wrapper">
        <div class="container login-container">
            <form role="form" action="{{ url_for('account.register', next=next) }}" method="post" role="form">
                {{ form.csrf_token }}
                <div class="form-group {% if form.errors.email %} has-error has-feedback {% endif %}">
                    <a class="pull-right" href="{{ url_for('account.login') }}">立即登录</a>
                    {% if form.errors.email %}
                    <label class="control-label" for="email">{{ form.errors.email[0] }}</label>
                    {% else %}
{#                    <label class="control-label" for="email">{{ form.email.label }}</label>#}
                    {% endif %}
                    {{ form.email(class="form-control input-lg", placeholder="邮箱") }}
                    {% if form.errors.email %}
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    {% endif %}
                </div>
                <div class="form-group {% if form.errors.password %} has-error has-feedback {% endif %}">
                    {% if form.errors.password %}
                    <label class="control-label" for="email">{{ form.errors.password[0] }}</label>
                    {% else %}
{#                    <label class="control-label" for="email">{{ form.password.label }}</label>#}
                    {% endif %}
                    {{ form.password(class="form-control input-lg", placeholder="账号密码") }}
                    {% if form.errors.password %}
                    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    {% endif %}
                </div>
                <div class="form-group" {% if form.errors.nickname %} has-error has-feedback {% endif %}>
                    {% if form.errors.nickname %}
                    <label class="control-label" for="nickname">{{ form.errors.nickname[0] }}</label>
                    {% else %}
{#                    <label class="control-label" for="nickname">{{ form.nickname.label }}</label>#}
                    {% endif %}
                    {{ form.nickname(class="form-control input-lg", placeholder="昵称") }}
{#                    <div class="suggestion">#}
{#                        <span class="tips text-muted">{{ _("第一印象很重要，起个响亮的昵称吧") }}</span>#}
{#                    </div>#}
                    {% if form.errors.nickname %}
                    <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    {% endif %}
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block btn-lg" type="submit">{{ _('注册') }}</button>
                </div>
                <div class="form-group">
                    <input type="checkbox" id="agreement"/>
                    <label class="control-label" for="agreement">{{ _("我已经认真阅读并同意脑动的《") }}<a class="" href="{{ url_for('frontend.index') }}" target="_blank">{{ _("使用协议") }}</a>{{ _("》。") }}
                    </label>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
