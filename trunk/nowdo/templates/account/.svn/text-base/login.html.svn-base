{% extends "account/base/account_layout.html" %}

{% block title %}
<title>{{ _("登录脑洞") }}</title>
{% endblock %}

{% block content %}
    <div class="login-form-wrapper">
        <div class="container login-container">
            <form role="form" class="form-signin" action="{{ url_for('account.login', next=next) }}" method="post" role="form">
                {{ form.csrf_token }}
                <div class="form-group {% if form.errors.email %} has-error has-feedback {% endif %}">
                    <a class="pull-right" href="{{ url_for('account.register') }}">注册</a>
                    {% if form.errors.email %}
                        <label class="control-label" for="email">{{ form.errors.email[0] }}</label>
                    {% endif %}
{#                                <label class="control-label" for="email">{{ form.email.description }}</label>#}
                    {{ form.email(class="form-control input-lg", placeholder='账号/邮箱') }}
                    {% if form.errors.email %}
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    {% endif %}
                </div>
                <div class="form-group {% if form.errors.password %} has-error has-feedback {% endif %}">
                    {% if form.errors.password %}
                        <label class="control-label" for="email">{{ form.errors.password[0] }}</label>
                    {% endif %}
{#                                <label class="control-label" for="password">{{ form.password.description }}</label>#}
                    {{ form.password(class="form-control input-lg", placeholder="登录密码") }}
                    {% if form.errors.password %}
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                    {% endif %}
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block btn-lg" type="submit">{{ _('登 录') }}</button>
                </div>
                <div class="form-group">
                    <input type="checkbox" id="remember"/>
                    <label class="control-label" for="remember">{{ _("下次自动登录") }}</label>
                    <a class="pull-right" href="{{  url_for('account.forget_password') }}">{{ _("密码忘记了") }}</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
