{% extends 'layout/layout.html' %}

{% block content %}
    {% call macros.render_panel_content('给 %s 写邮件' % receiver.nickname) %}
    <form class="" action="{{ url_for('mail.write') }}" method="post" role="form">
        {{ form.csrf_token }}
        {{ form.receiver_id }}
        <div class="form-group">
            {{ form.mail_content(class="form-control", rows='5') }}
        </div>
        {% if form.errors.mail_content %}
            <div class="alert alert-danger">
                {{ form.errors.mail_content[0] }}
            </div>
        {% endif %}
        <button class="btn btn-primary" type="submit">{{ _('发送') }}</button>
    </form>
    {% endcall %}
{% endblock %}

{% block sidebar %}
    <a href="{{ url_for('mail.index') }}" class="bottom-gap btn-primary btn">
        <i class="fa fa-reply"></i>
        回到我的脑邮邮箱
    </a>
{% endblock %}