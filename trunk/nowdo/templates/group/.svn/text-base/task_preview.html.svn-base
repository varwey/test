{% extends "layout/layout.html" %}

{% block content %}
    <div class="panel panel-default panel-content">
        <div class="panel-heading">
            <h1>
                {{ task_name }}
            </h1>
        </div>
        <div class="panel-body">
            {{ task_content|escape_unsafe_tags|safe }}
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ macros.render_user_profile_card(current_user) }}
    <a href="javascript: window.close();" class="btn btn-primary form-control bottom-gap">
        <i class="fa fa-times"></i>
        结束预览
    </a>
{% endblock %}