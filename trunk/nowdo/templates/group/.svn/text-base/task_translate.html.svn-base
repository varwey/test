{% extends 'layout/layout.html' %}

{% block extra_js %}
    <script type="text/javascript">
        seajs.use(['nowdo', '$'], function(nowdo, $){
            $(function(){
                nowdo.translateTool.init({{ task|tojson|safe }}, {{ supported_languages|tojson|safe }}, {{ user|tojson|safe }});
                $('.fancybox').fancybox({
                    padding: 0,
                    type: 'image',
                    helpers: {
                        overlay: {
                            locked: false
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}

{% block extra_css %}
    <style>
        html, body{
            background-color: #ededef;
{#            background-color: #e5e4db;#}
            height: 100%;
        }
    </style>
{% endblock %}

{% block body_content %}
    <div id="sarike-slide-sidebar" style="right: -515px;">
        <div class="slide-heading">
            <h1>
                <a href="javascript:void(0)" class="close-slide">
                    <i class="fa fa-angle-double-right fa-lg"></i>
                    评论列表
                </a>
                <a class="pull-right refresh-comments" href="javascript:void(0);">
                    <i class="fa fa-refresh"></i>
                </a>
            </h1>
        </div>
        <div class="slide-body">
            <div class="comment-form">
                <div class="row">
                    <div class="col-xs-9">
                        <div contenteditable="true" class="div-input"></div>
                    </div>
                    <div class="col-xs-3">
                        <button class="btn btn-primary submit-comment">评论</button>
                    </div>
                </div>
            </div>
            <ul class="media-list"></ul>
        </div>
    </div>

    <div id="glossary-editor"></div>

    <div class="container " id="ts-container">
        <div class="row">
            <div class="col-xs-10">
                <div class="ts-header">

                </div>
                <div id="ts" class="ts-workspace">
                    <div class="page-header">
                        <h1>{{ task.name }}</h1>
                    </div>
                    <div id="entry-list"></div>
                </div>
                <div id="glossary-table" class="ts-workspace" style="display: none">
                    <div class="page-header">
                        <h1>术语表</h1>
                    </div>
{#                    <ul class="list-group glossary-table-list"></ul>#}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>原词</th>
                                <th>目标词</th>
                            </tr>
                        </thead>
                        <tbody class="glossary-list">

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-xs-2">

                <div class="ts-tool-panel" id="ts-aside-controls">

                    <div class="panel panel-default panel-xc">
                        <div class="panel-heading toggle-ts-tool-bar">
                            脑洞工具箱
                            <a class="pull-right" href="javascript:void(0);">
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </div>
                        <ul class="ts-tool-bar list-group opened"></ul>
                    </div>
                    {% if task.task_images|length > 0 %}
                        <div class="panel panel-default panel-xc">
                            <div class="panel-heading toggle-task-image-slide">
                                主题图片
                                <a class="pull-right" href="javascript:void(0);">
                                    <i class="fa fa-caret-down"></i>
                                </a>
                            </div>
                            <div class="panel-body task-image-slide opened">
                                <div class="slide-left">
                                    <i class="fa fa-caret-left"></i>
                                </div>
                                <div class="task-image-slide-wrap">
                                    <div class="task-image-slide-inner">
                                        {% for img in task.task_images %}
                                            <a href="{{ img }}" class="fancybox"></a>
                                            <a class="fancybox" href="{{ img }}"
                                               data-fancybox-group="{{ task.id }}"
                                               target="_blank">
                                                <img src="{{ img }}" alt=""/>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="slide-right">
                                    <i class="fa fa-caret-right"></i>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
    <div id="intro">

    </div>
{% endblock %}

{% block footer %}
    <div class="footer">
        <p class="copyright">
            <span class="copy-right text-muted">&copy;2013-2014 now-do.com, all rights reserved</span>
        </p>
    </div>
{% endblock %}