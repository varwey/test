{% extends "management/base.html" %}

{% block content %}
    {{ macros.management_nav(request.endpoint) }}
    {% set current_tag_name = current_tag.tag_name if current_tag is defined else '' %}

    {% call macros.render_panel_content(extra_class="nav-pills-content") %}
        {% for tag, task_count in tag_list %}
            {{ macros.render_tag(tag, active_if=current_tag_name, count=task_count, endpoint=request.endpoint) }}
        {% endfor %}
    {% endcall %}

    {% if task_tag_rel_pagination is defined %}
        {{ macros.render_task_tag_rel_list(task_tag_rel_pagination.object_list, supported_languages) }}
    {% else %}
        {% call macros.render_panel_content() %}
            请选择一个标签
        {% endcall %}
    {% endif %}

    {{ macros.render_pagination(task_tag_rel_pagination, request.endpoint) }}
{% endblock %}

{% block extra_js %}
    <script type="text/javascript">
        seajs.use(['nowdo', '$'], function(nowdo, $){
            $(function(){
                nowdo.trigger.addFeaturedTrigger('.featured', '{{ current_tag.id if current_tag else None }}');
            });
        });
    </script>
{% endblock %}