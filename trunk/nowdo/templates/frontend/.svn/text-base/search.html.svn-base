{% extends 'layout/layout.html' %}

{% block content %}

    <div class="search-form bottom-gap">
        <form action="{{ url_for('frontend.search') }}">
            <div class="input-group">
                <input class="form-control input-sm" type="text" value="{{ keyword }}" name="keyword"/>
            <span class="input-group-btn">
                <button class="btn btn-primary btn-sm" type="submit">
                    搜索
                </button>
            </span>
            </div>
        </form>
    </div>


    {{ macros.render_trends_list(trends_list, supported_languages, '没有搜索到任何内容') }}
    {{ macros.render_pagination(trends_pagination, 'frontend.search', dict(keyword=keyword)) }}
{% endblock %}

{% block sidebar %}

{% endblock %}