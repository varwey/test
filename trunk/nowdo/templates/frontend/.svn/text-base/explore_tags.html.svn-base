{% extends 'frontend/base/explore_base.html' %}

{% block content %}
    {{ super() }}
    {% call macros.render_panel_content(use_list=True) %}
        <div class="panel-body">
            <div class="recommend_tag_task_list">
                <div class="tasks">
                    {% for tag in tag_tuple %}
                        <a href="{{ url_for('frontend.tag_view', tag=tag) }}" class="task-item"
                             style="background: url({{ url_for('static', filename="images/frontend/tag.jpg") }}) center center;">
                            <div class="tag-label">
                                {{ tag }}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <ul class="list-group all-tag-list">
            {% for tag in hot_tags %}
                <li class="list-group-item">
                    <a href="{{ url_for('frontend.tag_view', tag=tag.tag_name) }}">
                        {{ tag.tag_name }}
                    </a>
                    <span class="pull-right meta">热度：{{ tag.hot }}</span>
                </li>
            {% endfor %}
        </ul>
    {% endcall %}
{% endblock %}