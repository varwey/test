{% extends "layout/layout.html" %}

{% block content %}
    {% call macros.render_panel_content('编辑术语') %}
        <form action="{{ url_for('glossary.edit_glossary', glossary_id=glossary.id) }}"
              method="post">
            {{ form.csrf_token }}
            <div class="form-group">
                {{ form.source.label }}
                {{ form.source(class="form-control") }}
            </div>
            <div class="form-group">
                {{ form.target.label }}
                {{ form.target(class="form-control") }}
            </div>
            {% if form.errors %}
                <div class="alert alert-danger">
                    {% for label, error_list in form.errors.iteritems() %}
                        <p>{{ error_list[0] }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>
    {% endcall %}
{% endblock %}

{% block sidebar %}
    <a class="bottom-gap btn btn-primary" href="{{ url_for('glossary.glossary_table', glossary_table_id=glossary.glossary_table.id) }}">
        回到：术语表 {{ glossary.glossary_table.name }}
    </a>
{% endblock %}