{% extends "layout/layout.html" %}

{% block content %}
    {% call macros.render_panel_content() %}
        <div>
            <strong>
                源语言：
            </strong>
            {{ supported_languages[glossary.source_language] }}
        </div>
        <div>
            <strong>
                目标语言：
            </strong>
            {{ supported_languages[glossary.target_language] }}
        </div>
    {% endcall %}

    {% call macros.render_panel_content() %}
        <form action="{{ url_for('glossary.edit_checking_glossary', glossary_id=glossary.id) }}"
              method="post">
            {{ form.csrf_token }}
            <div class="form-group">
                {{ form.source.label }}
                {{ form.source(class="form-control") }}
            </div>
            <div class="form-group">
                {{ form.target.label }}
                {{ form.target(class="form-control") }}
            </div>
            <div class="form-group">
                {{ form.glossary_table.label }}
                {{ form.glossary_table(class="form-control") }}
            </div>
            {% if form.errors %}
                <div class="alert alert-danger">
                    {% for label, error_list in form.errors.iteritems() %}
                        <p>{{ error_list[0] }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">提交并通过审核</button>
            </div>
        </form>
    {% endcall %}
{% endblock %}

{% block sidebar %}
    <a class="bottom-gap btn btn-primary" href="{{ url_for('glossary.checking') }}">
        回到：待审核的术语列表
    </a>
{% endblock %}