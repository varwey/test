{% extends "layout/layout.html" %}

{% block content %}
    {% call macros.render_panel_content('创建新术语表') %}
        <form action="{{ url_for('glossary.create_glossary_table') }}"
              method="post"
              enctype="multipart/form-data">
            {{ form.csrf_token }}
            <div class="form-group">
                {{ form.name.label }}
                {{ form.name(class="form-control") }}
            </div>
            <div class="form-group">
                {{ form.source_language.label }}
                {{ form.source_language(class="form-control") }}
            </div>
            <div class="form-group">
                {{ form.target_language.label }}
                {{ form.target_language(class="form-control") }}
            </div>
            {% if form.errors %}
                <div class="alert alert-danger">
                    {% for label, error_list in form.errors.iteritems() %}
                        <p>{{ error_list[0] }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>
    {% endcall %}

{% endblock %}

{% block sidebar %}
    <a class="bottom-gap btn btn-primary" href="{{ url_for('glossary.index') }}">回到：我的术语</a>
{% endblock %}